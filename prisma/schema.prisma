// Schema de Prisma para Plugin Template
// 
// Este schema define TODOS los modelos necesarios para el plugin:
// - Modelos del CORE que el plugin necesita leer (se marcan con comentario)
// - Modelos NUEVOS del plugin (se agregarán al core al hacer merge)
//
// En desarrollo standalone: Este schema se usa tal cual
// En producción integrada: Solo los modelos NUEVOS se agregan al core

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // Siempre usar PostgreSQL (NO SQLite)
  // 
  // MODO STANDALONE (desarrollo del plugin solo):
  //   - Arrancar: docker-compose up -d (PostgreSQL en puerto 5433)
  //   - DATABASE_URL: postgresql://formara:formara_dev@localhost:5433/PLUGIN_NAME_plugin?schema=public
  //   - Usa schema 'public' en base 'PLUGIN_NAME_plugin'
  //
  // MODO INTEGRADO (desarrollo con Formara core):
  //   - NO arrancar docker-compose del plugin
  //   - DATABASE_URL: postgresql://formara:flexa123difficult@localhost:5432/formara?schema=public
  //   - Los modelos del plugin se mergean al core y se crean en schema 'public' de la base 'formara'
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// MODELOS DEL CORE
// ⚠️ Solo para desarrollo standalone
// El core ya tiene estos modelos y los descartará al importar
// ========================================

model Workspace {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  workspaceId Int
  role        String   @default("member")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id          Int      @id @default(autoincrement())
  filename    String
  workspaceId Int
  userId      Int?
  status      String   @default("pending")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PluginActionLog {
  id         Int      @id @default(autoincrement())
  pluginName String
  actionId   String
  context    Json
  result     Json
  success    Boolean
  createdAt  DateTime @default(now())
  
  @@index([pluginName, actionId])
  @@index([createdAt])
}

// ========================================
// MODELOS DEL PLUGIN
// ✅ Estos modelos son NUEVOS
// Se agregarán al schema del core al hacer merge
// ========================================

// Ejemplo de modelo del plugin (reemplazar con tus modelos)
model PluginTemplateExample {
  id          Int      @id @default(autoincrement())
  workspaceId Int
  name        String
  data        Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workspaceId])
  @@map("plugin_template_example")
}
